<div class="row clearfix s_mb_20">
    <div class="col-md-8 column">
        {{#unless globals.hasOrder}}
            <div class="row">
                <div class="col-md-12">
                    <div id="order" class="panel s_pt_10 s_pb_20 s_pl_20 s_pr_20">
                        <h2 class="text_align_c text_color_orange s_mb_20 s_mt_20">Вступай в игру!</h2>

                        <p class="text_align_c s_mb_30">Оставьте заявку на участие в Лиге и мы обязательно с Вами свяжемся!</p>

                        <form class="form contact-form js-contacts-form" autocomplete="off">
                            <input type="hidden" name="leagueId" value="{{globals.league._id}}">

                            <div class="contact-form__main">
                                <div class="row">

                                    <div class="form-field not-empty col-md-6">
                                        <span><label for="q1">Укажите Ваше имя.</label></span>
                                        <input id="q1" name="name" type="text"/>
                                        <span class="error not-empty">Заполните поле</span>
                                    </div>
                                    <div class="form-field col-md-6">
                                        <span><label for="q2">Откуда Вы узнали о нашей лиге?</label></span>
                                        <input id="q2" name="source" type="text"/>
                                    </div>
                                </div>
                                <div class="row s_mb_20 js-radio-group-team-or-player">

                                    <div class="form-field col-md-6">
                                        <span><label>Кто Вы?</label></span>

                                        <div>
                                            <input type="radio" id="player" name="teamOrPlayer" value="player"/>
                                            <label for="player"><span></span>Свободный агент, ищу команду</label>
                                        </div>
                                        <div>
                                            <input type="radio" id="team" name="teamOrPlayer" value="team"/>
                                            <label for="team"><span></span>У меня уже есть команда, хочу заявить</label>
                                        </div>
                                    </div>
                                    <div class="form-field col-md-6">
                                        <span><label>Формат игры</label></span>

                                        <div>
                                            <input type="radio" id="8x8" name="format" value="8"/>
                                            <label for="8x8"><span></span>8на8</label>
                                        </div>
                                        <div>
                                            <input type="radio" id="5x5" name="format" value="5"/>
                                            <label for="5x5"><span></span>5на5</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="contact-form__additional js-contacts-form-additional">
                                    <div class="s_display_none js-contacts-form-additional-item animated fadeIn" data-choice="player">
                                        <div class="row s_mb_20">
                                            <div class="form-field col-md-6">
                                                <span><label for="q5">В какой лиге Вы бы хотели участвовать?</label></span>
                                                <input id="q5" name="league" type="text"/>
                                            </div>
                                            <div class="form-field col-md-6">
                                                <span><label for="q6">За какую команду Вы бы хотели играть?</label></span>
                                                <input id="q6" name="team" type="text"/>
                                            </div>
                                        </div>
                                        <div class="row s_mb_20">
                                            <div class="form-field col-md-6">
                                                <span><label for="q7">Любимая позиция</label></span>
                                                <input id="q7" name="position" type="text"/>
                                            </div>
                                            <div class="form-field col-md-6">
                                                <span><label for="q8">Возраст</label></span>
                                                <input id="q8" name="age" type="text"/>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="s_display_none js-contacts-form-additional-item animated fadeIn" data-choice="team">
                                        <div class="row s_mb_20">
                                            <div class="form-field col-md-6">
                                                <span><label for="q9">В какой лиге Вы бы хотели участвовать?</label></span>
                                                <input id="q9" name="league" type="text"/>
                                            </div>
                                            <div class="form-field col-md-6">
                                                <span><label for="q10">Какую команду Вы бы хотели заявить?</label></span>
                                                <input id="q10" name="team" type="text"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row s_mb_20">
                                    <div class="form-field col-md-6">
                                        <span><label for="q5">Укажите Ваш телефон</label></span>
                                        <input id="q5" name="phone" type="text"/>
                                    </div>
                                    <div class="form-field col-md-6">
                                        <span><label for="q6">Укажите Ваш email</label></span>
                                        <input id="q6" name="email" type="email"/>
                                    </div>
                                </div>
                                <div class="row s_mb_30">
                                    <div class="form-field col-md-6">
                                        <span><label for="q7">Опыт участия в других лигах</label></span>
                                        <textarea id="q7" name="experience"></textarea>
                                    </div>
                                    <div class="form-field col-md-6">
                                        <span><label for="q7">Комментарий</label></span>
                                        <textarea id="q7" name="message"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group form-group_icon_left">
                                <button class="btn form-control js-button-submit" disabled><i class="fa fa-arrow-circle-o-right"></i>
                                    <span class="animated delay-05s js-button-span">Отправить заявку</span>
                                    <span class="btn-span-ok animated delay-05s js-button-span-ok">Спасибо! Мы с Вами обязательно свяжемся!</span>
                                </button>
                            </div>
                        </form>

                        <div class="row">
                            <div class="text_align_c col-md-12">
                                {{#if toCall}}
                                    <p class="text_align_c text_size_16 s_mt_20">Или просто свяжитесь с этим парнем!</p>

                                    <div class="contact__photo s_display_block"
                                         style="margin: 20px auto; background-image: url('{{toCall.image}}')"></div>
                                    <div class="contact__details">
                                        <div class="contact__name text_color_orange text_size_16npm">{{toCall.name}}</div>
                                        {{#if toCall.email}}
                                            <span class="contact__phone s_mr_20"><i
                                                    class="fa fa-inbox text_color_orange s_mr_10"></i>{{toCall.email}}</span>
                                        {{/if}}
                                        {{#if toCall.phone}}
                                            <span class="contact__phone s_mr_20"><i
                                                    class="fa fa-phone text_color_orange s_mr_10"></i>{{toCall.phone}}</span>
                                        {{/if}}
                                        {{#if toCall.vk.url}}
                                            <span class="contact__vk">
                                                <i class="fa fa-vk text_color_orange s_mr_10"></i><a href="{{toCall.vk.url}}"
                                                                                                     target="_blank">{{toCall.vk.name}}</a>
                                            </span>
                                        {{/if}}
                                    </div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/unless}}
        <!--<h2 class="s_mb_20 animated fadeInUp ano">Контакты лиги Amateur</h2>-->

        <div class="row clearfix masonry-container">
            <div class="masonry js-masonry"
                 data-masonry-options='{"itemSelector": ".js-masonry-item", "columnWidth": 390, "isAnimated": "true", "isFitWidth": "true" }'>
                {{~#each contacts~}}
                    <div class="masonry-item masonry-item__hidden_yes col-md-6 col-sm-6 col-xs-6 js-masonry-item">
                        <div class="panel panel_type_contact contact">
                            <div class="panel__header">
                                <i class="fa fa-user text_size_16 s_mr_10"></i> {{name}}
                            </div>
                            <div class="panel__body">
                                <div class="contact">
                                    <div class="row">
                                        <div class="col-md-4 col-sm-4 col-xs-4">
                                            <div class="contact__photo s_mt_10 s_mb_10" style="background-image: url('{{image}}')"></div>
                                        </div>
                                        <!--


                                                                                -->
                                        <div class="col-md-8 col-sm-8 col-xs-8">
                                            <div class="contact__details">
                                                <div class="contact__name">{{name}}</div>
                                                <div class="contact__title">{{{title}}}</div>
                                                {{#if email}}
                                                    <div class="contact__phone"><i
                                                            class="fa fa-inbox text_color_orange s_mr_10"></i>{{email}}</div>
                                                {{/if}}
                                                {{#if phone}}
                                                    <div class="contact__phone"><i
                                                            class="fa fa-phone text_color_orange s_mr_10"></i>{{phone}}</div>
                                                {{/if}}
                                                {{#if vk.url}}
                                                    <div class="contact__vk">
                                                        <i class="fa fa-vk text_color_orange s_mr_10"></i><a href="{{vk.url}}"
                                                                                                             target="_blank">{{vk.name}}</a>
                                                    </div>
                                                {{/if}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {{~/each~}}
            </div>
        </div>
    </div>
    <div class="col-md-4 column sidebar">
        <div class="panel s_mb_20">
            <div class="panel__header">
                <i class="fa fa-trophy text_size_16 s_mr_10"></i> Турниры
            </div>
            <div class="panel__body">
                {{#each globals.league.countries}}
                    <h4 class="text_color_orange s_mt_0 s_mb_10">{{name}}</h4>
                    <ul>
                        {{#each tournaments}}
                            <li class="s_ml_20 s_mb_5">
                                <a href="/{{../../globals.league.slug}}/tournaments/{{slug}}">{{noYear name}}</a>
                            </li>
                        {{/each}}
                    </ul>
                {{/each}}
            </div>
        </div>

        <!-- NEWS -->

        {{#notEmptyObject globals.news}}
            <div class="panel s_m_0">
                <div class="panel__header">
                    <i class="fa fa-quote-right text_size_16 s_mr_10"></i> Новости
                </div>
                <div class="panel__body">
                    {{> news news=globals.news}}
                </div>
            </div>
            <div class="link_type_full s_mb_10">
                <span class="text_color_orange">Все новости</span>
                <span class="pull-right">
                    <a href="/{{globals.league.slug}}/news"><i class="fa fa-arrow-circle-o-right"></i></a>
                </span>
            </div>
        {{/notEmptyObject}}

        <!-- PARTNERS -->

        <div class="panel s_m_0">
            <div class="panel__header">
                <i class="fa fa-suitcase text_size_16 s_mr_10"></i> Партнеры
            </div>
            <div class="panel__body">
                {{> partners}}
            </div>
        </div>
    </div>
</div>
