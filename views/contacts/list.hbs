<h2 class="s_mb_20">Контакты лиги Amateur</h2>

<div class="row clearfix s_mb_20">
    <div class="col-md-8 column">
        <div class="row clearfix">
            {{#each contacts}}
                <div class="col-md-6">
                    <div class="panel panel_type_contact contact">
                        <div class="panel__header">
                            <i class="fa fa-user text_size_16 s_mr_10"></i> {{name}}
                        </div>
                        <div class="panel__body">
                            <div class="contact__photo s_mt_10 s_mb_10" style="background-image: url('{{image}}')"></div>
                            <div class="contact__details">
                                <div class="contact__name">{{name}}</div>
                                <div class="contact__title">{{title}}</div>
                                {{#if email}}
                                    <div class="contact__phone"><i class="fa fa-inbox text_color_orange s_mr_10"></i>{{email}}</div>
                                {{/if}}
                                {{#if phone}}
                                    <div class="contact__phone"><i class="fa fa-phone text_color_orange s_mr_10"></i>{{phone}}</div>
                                {{/if}}
                                {{#if vk.url}}
                                    <div class="contact__vk">
                                        <i class="fa fa-vk text_color_orange s_mr_10"></i><a href="{{vk.url}}" target="_blank">{{vk.name}}</a>
                                    </div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
    <div class="col-md-4 column sidebar">
        <div class="panel s_mb_20">
            <div class="panel__header">
                <i class="fa fa-trophy text_size_16 s_mr_10"></i> Турниры
            </div>
            <div class="panel__body">
                {{#each globals.league.countries}}
                    <h4 class="text_color_orange s_mt_0 s_mb_10">{{name}}</h4>
                    <ul>
                        {{#each tournaments}}
                            <li class="s_ml_20 s_mb_5">
                                <a href="/{{../../globals.league.slug}}/tournaments/{{slug}}">{{noYear name}}</a>
                            </li>
                        {{/each}}
                    </ul>
                {{/each}}
            </div>
        </div>

        <!-- NEWS -->

        {{#notEmptyObject globals.news}}
            <div class="panel s_m_0">
                <div class="panel__header">
                    <i class="fa fa-quote-right text_size_16 s_mr_10"></i> Новости
                </div>
                <div class="panel__body">
                    {{> news news=globals.news}}
                </div>
            </div>
            <div class="link_type_full s_mb_10">
                <span class="text_color_orange">Все новости</span>
                <span class="pull-right">
                    <a href="/{{globals.league.slug}}/news"><i class="fa fa-arrow-circle-o-right"></i></a>
                </span>
            </div>
        {{/notEmptyObject}}

        <!-- CONTACTS -->

        {{#if globals.contacts.length}}
            <div class="panel s_m_0">
                <div class="panel__header">
                    <i class="fa fa-phone text_size_16 s_mr_10"></i> Контакты
                </div>
                <div class="panel__body">
                    {{> contacts contacts=globals.contacts}}
                </div>
            </div>
            <div class="link_type_full s_mb_10">
                <span class="text_color_orange">Все контакты</span>
                <span class="pull-right">
                    <a href="/{{globals.league.slug}}/contacts"><i class="fa fa-arrow-circle-o-right"></i></a>
                </span>
            </div>
        {{/if}}
    </div>
</div>
