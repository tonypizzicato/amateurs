<div class="row clearfix s_mb_20">
    <div class="col-md-8 column">

        <div class="row">
            <div class="column col-md-12">
                <div class="panel panel_type_transparent">
                    <div class="panel__body s_p_0">
                        <div class="row match">
                            <div class="col-md-4 text_align_r">
                                <img class="pull-left" src="/images/logos/{{match.home.short}}.png" width="64">

                                <p class="text_size_32 text_weight_light s_mb_20">{{match.home.score}}</p>

                                <p class="text_color_orange text_size_16">{{match.home.name}}</p>

                                <ul>
                                    {{#each match.events}}
                                        {{#eq team ../match.home.short}}
                                            {{#eq 'goal' ../type}}
                                                <li class="text_size_12">{{../time}}' {{../player}}</li>
                                            {{/eq}}
                                        {{/eq}}
                                    {{/each}}
                                </ul>
                            </div>
                            <div class="col-md-4 text_align_c">
                                <div class="match__time s_mb_10{{#gt match.time 40}} gt-50{{/gt}}">
                                    <div class="ppc-progress">
                                        <div class="ppc-progress-fill"
                                             style="transform:  rotate({{match.timePercent}}deg); -webkit-transform: rotate({{match.timePercent}}deg);"></div>
                                    </div>
                                    <div class="ppc-percents">
                                        <div class="pcc-percents-wrapper">
                                            <span>{{~match.time~}}</span>
                                        </div>
                                    </div>
                                </div>
                                <p class="s_m_0 text_color_muted">Время: {{match.timeStart}}</p>

                                <p class="s_m_0 text_color_muted">Стадион: {{match.stadium}}</p>

                                <p class="text_color_muted">Судья: {{match.referee}}</p>
                            </div>
                            <div class="col-md-4 text_align_l">
                                <img class="pull-right" src="/images/logos/{{match.away.short}}.png" width="64">

                                <p class="text_size_32 text_weight_light s_mb_20">{{match.away.score}}</p>

                                <p class="text_color_orange text_size_16">{{match.away.name}}</p>

                                <ul>
                                    {{#each match.events}}
                                        {{#eq team ../match.away.short}}
                                            {{#eq 'goal' ../type}}
                                                <li class="text_size_12">{{../time}}' {{../player}}</li>
                                            {{/eq}}
                                        {{/eq}}
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row s_mb_20">
            <div class="column col-md-12">
                <div class="tabbable" id="tabs-992576">
                    <ul class="nav nav-tabs">
                        <li class="tab__title tab__title_size_half active">
                            <a href="#tab-lineups" data-toggle="tab">Составы</a>
                        </li>
                        <li class="tab__title tab__title_size_half">
                            <a href="#tab-events" data-toggle="tab">События</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab-lineups">
                            <div class="row">
                                <div class="column col-md-6">
                                    {{#each match.home.lineup}}
                                        <div class="row">
                                            <div class="column col-md-12 s_pr_0">
                                                <div class="match-lineup__number column col-md-2 text_color_orange">
                                                    {{~number~}}
                                                </div>
                                                <div class="match-lineup__player column col-md-8">
                                                    {{~name~}}
                                                </div>
                                                <div class="match-lineup__player column col-md-2 text_align_c">
                                                    {{~position~}}
                                                </div>
                                            </div>
                                        </div>
                                    {{/each}}
                                </div>
                                <div class="column col-md-6">
                                    {{#each match.away.lineup}}
                                        <div class="row">
                                            <div class="column col-md-12 s_pl_0">
                                                <div class="match-lineup__player column col-md-2 text_align_c">
                                                    {{~position~}}
                                                </div>
                                                <div class="match-lineup__player column col-md-8 text_align_r">
                                                    {{~name~}}
                                                </div>
                                                <div class="match-lineup__number column col-md-2 text_align_r text_color_orange">
                                                    {{~number~}}
                                                </div>
                                            </div>
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab-events">
                            {{#each match.events}}
                                <div class="row">
                                    <div class="column col-md-2">
                                        <div class="match-events__time text_align_r">
                                            {{#eq type 'goal'}}
                                                <span class="icon_type_event text_color_orange">Гол!</span>
                                            {{/eq}}
                                            {{#eq type 'yc'}}
                                                <i class="icon_type_event icon-yellow"></i>
                                            {{/eq}}
                                            {{#eq type 'rc'}}
                                                <i class="icon_type_event icon-red"></i>
                                            {{/eq}}
                                            {{#eq type 'pen'}}
                                                <i class="icon_type_event icon-penalty"></i>
                                            {{/eq}}
                                            {{#eq type 'cor'}}
                                                <i class="icon_type_event icon-corner"></i>
                                            {{/eq}}
                                            {{#eq type 'inj'}}
                                                <i class="icon_type_event icon-injury"></i>
                                            {{/eq}}
                                            {{time}}'
                                        </div>
                                    </div>
                                    <div class="column col-md-10">
                                        <div class="match-events__description pull-right">
                                            <span class="text_color_orange">{{player}}</span>. {{description}}
                                        </div>
                                    </div>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row s_mb_20">
            <div class="column col-md-12">
                <div class="tabbable" id="tabs-992576">
                    <ul class="nav nav-tabs">
                        <li class="tab__title tab__title_size_half active">
                            <a href="#tab-photo" data-toggle="tab">Фотоотчет</a>
                        </li>
