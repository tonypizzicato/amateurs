                                        <div class="column col-md-2"><img
                                                src="http://lorempixel.com/200/200/sports/?q={{#rand 0 20}}{{/rand}}"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="link_type_full">
                                <span class="text_color_orange">Смотреть все</span>
                                    <span class="pull-right">
                                        <a href="/league/{{league.short}}/photo"><i class="fa fa-arrow-circle-o-right"></i></a>
                                    </span>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab-review">

