{{#if stats.length}}
    <table class="table table_layout_fixed s_m_0">
        <thead>
        <tr>
            <th class="col-md-1"></th>
            <th class="col-md-9 text_align_l">Игрок</th>
            <th class="col-md-2 text_align_c">Поз</th>
            <th class="col-md-2 text_align_c">Голы</th>
        </tr>
        </thead>

        <tbody>
        {{#each stats}}
            <tr>
                <td class="text_align_c">{{inc @index}}</td>
                <td class="text_align_l text_overflow_ellipsis">
                    <span class="tl tl-{{teams.[0]._id}}-20 s_mr_10"></span>
                    <a href="/{{../globals.league.slug}}/players/{{playerId}}">{{noSecondName playerName}}</a>
                </td>
                <td class="text_align_c">{{position}}</td>
                <td class="text_align_c">{{goals}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{else}}
    <p class="text_align_c s_pt_20 s_pb_10">{{emptyText}}</p>
{{/if}}
