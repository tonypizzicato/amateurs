<div class="row s_mb_20">

    <div class="col-md-12">
        <div class="row">
            <div class="col-md-3 text_align_r s_mt_40">
                <a href="/tournaments/{{tournament.slug}}/teams/{{article.game.teams.[0]._id}}">
                    {{article.game.teams.[0].name}}
                </a>
            </div>
            <div class="col-md-2">
                <img class="s_mr_10" src="http://sharvester.ru/api/img/teams/{{article.game.teams.[0]._id}}.png" height="100"/>
            </div>
            <div class="col-md-2 text_color_light text_align_c s_pl_0 s_pr_0">
                {{#if article.game.placeName}}
                    <p class="text_size_12 text_color_muted s_pb_0 s_mb_0">
                        <a class="text_color_light" href="/{{league.slug}}/tournaments/{{tournament.slug}}/fields/{{slugify article.game.placeName}}">
                            {{article.game.placeName}}
                        </a>
                    </p>
                    <i class="fa fa-location-arrow text_color_orange s_mr_5"></i>
                {{/if}}
                {{#if article.game.dateTime}}
                    <p class="text_size_12 text_color_light s_mb_3">
                        {{dateHuman article.game.dateTime}}<br>
                        {{ucfirst (dateDay article.game.dateTime)}}<br>
                        {{time article.game.dateTime}}
                    </p>
                {{/if}}
            </div>
            <div class="col-md-2">
                <img class="s_mr_10" src="http://sharvester.ru/api/img/teams/{{article.game.teams.[1]._id}}.png" height="100"/>
            </div>
            <div class="col-md-3 s_mt_40">
                <a href="/tournaments/{{tournament.slug}}/teams/{{article.game.teams.[1]._id}}">
                    {{article.game.teams.[1].name}}
                </a>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="reading s_pl_10 s_pr_10">
            {{{article.body}}}

            {{> video video=article.video}}
        </div>
    </div>
</div>
