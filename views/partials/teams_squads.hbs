{{#if squads.length}}
    {{#each squads}}
        <div class="s_overflow_hidden">
            <div class="match-lineup__number column col-md-1 text_color_orange">
                {{~#if number}}{{~number~}}{{else}}&mdash;{{/if~}}
            </div>
            <div class="match-lineup__player column col-md-10">
                {{~name~}}
            </div>
            <div class="match-lineup__player column col-md-1 text_align_c">
                {{~#if position}}{{~position~}}{{else}}&mdash;{{/if~}}
            </div>
        </div>
    {{/each}}
{{else}}
    <p class="text_align_c s_pt_10">{{emptyText}}</p>
{{/if}}