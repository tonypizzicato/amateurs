<table class="table table_type_table s_m_0">
    {{#unless hideHeader}}
        <thead>
        <tr>
            <th class="{{#if tableFull}}col-md-1{{else}}col-md-2{{/if}} text_align_c">Место</th>
            <th class="{{#if tableFull}}col-md-6{{else}}col-md-8{{/if}}">Клуб</th>
            <th class="col-md-05 text_align_c">И</th>
            {{#if tableFull}}
                <th class="col-md-05 text_align_c">В</th>
                <th class="col-md-05 text_align_c">Н</th>
                <th class="col-md-05 text_align_c">П</th>
                <th class="col-md-05 text_align_c">ГЗ</th>
                <th class="col-md-05 text_align_c">ГП</th>
                <th class="col-md-05 text_align_c">ГР</th>
                <th class="col-md-3 text_align_r">Форма</th>
            {{/if}}
            <th class="col-md-1 text_align_c">О</th>
        </tr>
        </thead>
    {{/unless}}

    <tbody>
    {{#each table.teams}}
        <tr class="table__position" data-pos="{{position}}">
            <td class="text_align_c">{{position}}</td>
            <!--<td class="text_align_c movement">-->
            <!--<span class="-->
            <!--{{~#gt previous position}} fa fa-angle-up{{/gt~}}-->
            <!--{{~#lt previous position}} fa fa-angle-down{{/lt~}}-->
            <!--{{~#eq previous position}} fa fa-circle{{/eq~}}-->
            <!--">-->
            <!--</span>-->
            <!--</td>-->
            <td>

                {{#if ../tableFull}}<img class="s_mr_10" src="http://amateurs.io/api/img/teams/{{name}}.png" width="20" height="20"/>{{/if}}
                <a href="/{{../globals.league.slug}}/tournaments/{{../globals.tournament.slug}}/teams/{{_id}}">{{name}}</a>
            </td>
            <td class="text_align_c">{{played}}</td>
            {{#if ../tableFull}}
                <td class="text_align_c">{{won}}</td>
                <td class="text_align_c">{{draw}}</td>
                <td class="text_align_c">{{lost}}</td>
                <td class="text_align_c">{{scored}}</td>
                <td class="text_align_c">{{conceded}}</td>
                <td class="text_align_c">{{sub scored conceded}}</td>
                <td class="text_align_r">
                    {{#each form~}}
                        <span class="table__form table__form_{{this}}"></span>
                    {{/each~}}
                </td>
            {{/if}}
            <td class="text_align_c">{{score}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>
