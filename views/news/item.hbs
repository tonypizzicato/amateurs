<div class="block_type_news row clearfix s_mb_20">
    <div class="column col-md-8">
        <div class="news-item s_mb_20">
            <div class="panel panel_type_article s_m_0 s_pl_10 s_pr_10">
                <div class="panel__body">
                    {{#if article.image}}
                        <img class="s_mb_20" style="width: 100%;" src="{{article.image}}">
                    {{/if}}
                    <div class="row">
                        <div class="article__info col-md-12{{#if article.image}} article__info_lifted{{/if}}">
                            <div class='flag__wrapper rotate rotate_deg_0'>
                                <div class="flag flag_country_{{article.country.slug}}"></div>
                            </div>
                            <div class="article__info_details">
                                <span class="s_display_inline-block text_color_orange text_size_16 s_ml_10 s_line-height_2">{{article.country.name}}</span>
                                <span class="s_display_inline-block text_color_light text_size_14">{{ucfirst (dateHuman article.dc)}}, {{time article.dc}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 s_pl_30 s_pr_30 s_mb_40">

                            <h2>{{article.title}}</h2>

                            <div class="text_color_light">
                                {{~article.teaser~}}
                            </div>
                        </div>
                    </div>
                    <div class="reading s_pl_10 s_pr_10">
                        {{{ article.body }}}
                    </div>

                    {{> video video=article.video}}
                </div>
            </div>
            <div class="link_type_full s_mb_10">
                <span class="text_color_orange">Все новости</span>
                <span class="pull-right">
                    {{#if globals.tournament._id}}
                        <a href="/tournaments/{{globals.tournament.slug}}/news"><i class="fa fa-arrow-circle-o-right"></i></a>
                    {{else}}
                        <a href="/news"><i class="fa fa-arrow-circle-o-right"></i></a>
                    {{/if}}
                </span>
            </div>
        </div>
    </div>

    <!-- SIDEBAR -->
    <div class="col-md-4 column sidebar">

        {{#if globals.tournament._id}}

            {{#if globals.table}}
                <div class="panel s_m_0">
                    <div class="panel__header">
                        <i class="fa fa-list-ol s_mr_10"></i> Таблица
                    </div>
                    <div class="panel__body">
                        {{> table table=globals.table league=globals.league tournament=globals.tournament tableFull=false}}
                    </div>
                </div>
                <div class="link_type_full s_mb_10">
                    <span class="text_color_orange">Полная таблица</span>
                <span class="pull-right">
                    <a href="/tournaments/{{globals.tournament.slug}}/table"><i
                            class="fa fa-arrow-circle-o-right"></i></a>
                </span>
                </div>
            {{/if}}

            <div class="panel panel_type_fixture s_m_0">
                <div class="panel__header">
                    <i class="fa fa-calendar s_mr_10"></i> Последние матчи
                </div>
                <div class="panel__body">
                    {{> 'fixture' fixture=globals.recent emptyText='Ещё нет сыгранных матчей' }}
                </div>
            </div>
            <div class="link_type_full s_mb_10">
                <span class="text_color_orange">Календарь</span>
                <span class="pull-right">
                    <a href="/tournaments/{{globals.tournament.slug}}/fixture"><i
                            class="fa fa-arrow-circle-o-right"></i></a>
                </span>
            </div>
            <div class="panel panel_type_fixture s_m_0">
                <div class="panel__header">
                    <i class="fa fa-calendar s_mr_10"></i> Ближайшие матчи
                </div>
                <div class="panel__body">
                    {{> 'fixture' fixture=globals.comming emptyText='Нет запланированных матчей' }}
                </div>
            </div>
            <div class="link_type_full s_mb_10">
                <span class="text_color_orange">Календарь</span>
                <span class="pull-right">
                    <a href="/tournaments/{{globals.tournament.slug}}/fixture"><i
                            class="fa fa-arrow-circle-o-right"></i></a>
                </span>
            </div>

            <!-- NEWS -->

            {{#notEmptyObject globals.news}}
                <div class="panel s_m_0">
                    <div class="panel__header">
                        <i class="fa fa-quote-right text_size_16 s_mr_10"></i> Новости
                    </div>
                    <div class="panel__body">
                        {{> news news=globals.news}}
                    </div>
                </div>
                <div class="link_type_full s_mb_10">
                    <span class="text_color_orange">Все новости</span>
                <span class="pull-right">
                    <a href="/tournaments/{{globals.tournament.slug}}/news"><i class="fa fa-arrow-circle-o-right"></i></a>
                </span>
                </div>
            {{/notEmptyObject}}

            <!-- CONTACTS -->

            {{#if globals.tournament.contacts.length}}
                <div class="panel s_m_0">
                    <div class="panel__header">
                        <i class="fa fa-phone text_size_16 s_mr_10"></i> Контакты
                    </div>
                    <div class="panel__body">
                        {{> contacts contacts=globals.tournament.contacts}}
                    </div>
                </div>
                <div class="link_type_full s_mb_10">
                    <span class="text_color_orange">Все контакты</span>
                <span class="pull-right">
                    <a href="/contacts"><i class="fa fa-arrow-circle-o-right"></i></a>
                </span>
                </div>
            {{/if}}
        {{else}}
            <div class="panel s_mb_20">
                <div class="panel__header">
                    <i class="fa fa-trophy text_size_16 s_mr_10"></i> Турниры
                </div>
                <div class="panel__body">
                    {{#each globals.league.countries}}
                        <h5 class="text_color_orange s_mt_0 s_mb_10">{{name}}</h5>
                        <ul>
                            {{#each tournaments}}
                                <li class="s_ml_20 s_mb_5">
                                    <a href="/tournaments/{{slug}}">{{noYear name}}</a>
                                </li>
                            {{/each}}
                        </ul>
                    {{/each}}
                </div>
            </div>

            <!-- NEWS -->

            {{#notEmptyObject globals.news}}
                <div class="panel s_m_0">
                    <div class="panel__header">
                        <i class="fa fa-quote-right text_size_16 s_mr_10"></i> Новости
                    </div>
                    <div class="panel__body">
                        {{> news news=globals.news}}
                    </div>
                </div>
                <div class="link_type_full s_mb_10">
                    <span class="text_color_orange">Все новости</span>
                <span class="pull-right">
                    <a href="/news"><i class="fa fa-arrow-circle-o-right"></i></a>
                </span>
                </div>
            {{/notEmptyObject}}

            <!-- CONTACTS -->

            {{#if globals.contacts.length}}
                <div class="panel s_m_0">
                    <div class="panel__header">
                        <i class="fa fa-phone text_size_16 s_mr_10"></i> Контакты
                    </div>
                    <div class="panel__body">
                        {{> contacts contacts=globals.contacts}}
                    </div>
                </div>
                <div class="link_type_full s_mb_10">
                    <span class="text_color_orange">Все контакты</span>
                <span class="pull-right">
                    <a href="/contacts"><i class="fa fa-arrow-circle-o-right"></i></a>
                </span>
                </div>
            {{/if}}
        {{/if}}

        <!-- PARTNERS -->

        {{#eq globals.league.slug 'moscow'}}
            <div class="panel s_m_0">
                <div class="panel__header">
                    <i class="fa fa-suitcase text_size_16 s_mr_10"></i> Партнеры
                </div>
                <div class="panel__body">
                    {{> partners}}
                </div>
            </div>
        {{/eq}}
    </div>
</div>
