                    <i class="flaticon-goal"></i>
                    <a href="/leagues/{{short}}/stats/players">Бомбардиры</a>
                </div>
                <div class="panel__body s_p_0">
                    {{> strikers this}}
                </div>
                <div class="panel__heading">
                    <i class="flaticon-football13"></i>
                    <a href="/leagues/{{short}}/stats/players">Ассистенты</a>
                </div>
                <div class="panel__body s_p_0">
                    {{> assists this}}
                </div>
                <div class="panel__heading">
                    <i class="flaticon-football53"></i>
                    <a href="/leagues/{{short}}/stats/players">Гол+Пас</a>
                </div>
                <div class="panel__body s_p_0">
                    {{> strikers_assists this}}
                </div>
            </div>
        </div>
    {{/each}}
</div>
