<div class="row clearfix s_mb_20"><div class="col-md-8 column"><div class="row clearfix masonry-container">{{#if fields.length}}<div class="masonry" data-masonry-options='{"itemSelector": ".js-masonry-item", "columnWidth": 390, "isAnimated": "true", "isFitWidth": "true" }'>{{#each fields}}<div class="masonry-item masonry-item__hidden_yes {{#gt ../fields.length 1}}col-md-6{{else}}col-md-12{{/gt}} s_mb_20 js-masonry-item"><div class="panel panel_type_field s_m_0"><div class="panel__header"><i class="fa fa-location-arrow text_size_18 s_mr_10 s_valign_m"></i> <span>{{title}}</span></div><div class="panel__body"><div class="text_align_c s_mb_20"><i class="fa fa-map-marker text_size_24"></i><br><span class="text_color_orange s_valign_m">{{address}}</span></div>{{#if metro.name}}<div class="field__metro field__metro_{{metro.color}} text_align_c s_mb_20"><span class="s_display_inline-block s_mb_10">{{metro.name}}</span></div>{{/if}}<div class="field__photo s_mb_10">{{#if image}} <img src="{{#gt ../fields.length 1}}{{image.thumb.src}}{{else}}{{image.main.src}}{{/gt}}"> {{else}} <img src="https://placehold.it/340x230&text=image+is+comming!"> {{/if}}</div></div></div><div class="link_type_full s_mb_10"><span class="text_color_orange">Подробнее</span> <span class="pull-right">{{#if ../globals.tournament._id}} <a href="/{{../globals.league.slug}}/tournaments/{{../globals.tournament.slug}}/fields/{{slug}}"><i class="fa fa-arrow-circle-o-right"></i> </a>{{else}} <a href="/{{../globals.league.slug}}/fields/{{slug}}"><i class="fa fa-arrow-circle-o-right"></i></a> {{/if}}</span></div></div>{{/each}}</div>{{else}}<h3>Нет полей в лиге... Нам негде играть!!!</h3>{{/if}}</div></div><!-- SIDEBAR --><div class="col-md-4 column sidebar">{{#if globals.tournament._id}} {{#if globals.table}}<div class="panel s_m_0"><div class="panel__header"><i class="fa fa-list-ol s_mr_10"></i> Таблица</div><div class="panel__body">{{> table table=globals.table league=globals.league tournament=globals.tournament tableFull=false}}</div></div><div class="link_type_full s_mb_10"><span class="text_color_orange">Полная таблица</span> <span class="pull-right"><a href="/{{globals.league.slug}}/tournaments/{{globals.tournament.slug}}/table"><i class="fa fa-arrow-circle-o-right"></i></a></span></div>{{/if}}<div class="panel panel_type_fixture s_m_0"><div class="panel__header"><i class="fa fa-calendar s_mr_10"></i> Последние матчи</div><div class="panel__body">{{> 'fixture' fixture=globals.recent emptyText='Ещё нет сыгранных матчей' }}</div></div><div class="link_type_full s_mb_10"><span class="text_color_orange">Календарь</span> <span class="pull-right"><a href="/{{globals.league.slug}}/tournaments/{{globals.tournament.slug}}/fixture"><i class="fa fa-arrow-circle-o-right"></i></a></span></div><div class="panel panel_type_fixture s_m_0"><div class="panel__header"><i class="fa fa-calendar s_mr_10"></i> Ближайшие матчи</div><div class="panel__body">{{> 'fixture' fixture=globals.comming emptyText='Нет запланированных матчей' }}</div></div><div class="link_type_full s_mb_10"><span class="text_color_orange">Календарь</span> <span class="pull-right"><a href="/{{globals.league.slug}}/tournaments/{{globals.tournament.slug}}/fixture"><i class="fa fa-arrow-circle-o-right"></i></a></span></div><!-- NEWS --> {{#notEmptyObject globals.news}}<div class="panel s_m_0"><div class="panel__header"><i class="fa fa-quote-right text_size_16 s_mr_10"></i> Новости</div><div class="panel__body">{{> news news=globals.news}}</div></div><div class="link_type_full s_mb_10"><span class="text_color_orange">Все новости</span> <span class="pull-right"><a href="/{{globals.league.slug}}/tournaments/{{globals.tournament.slug}}/news"><i class="fa fa-arrow-circle-o-right"></i></a></span></div>{{/notEmptyObject}}<!-- CONTACTS --> {{#if globals.tournament.contacts.length}}<div class="panel s_m_0"><div class="panel__header"><i class="fa fa-phone text_size_16 s_mr_10"></i> Контакты</div><div class="panel__body">{{> contacts contacts=globals.tournament.contacts}}</div></div><div class="link_type_full s_mb_10"><span class="text_color_orange">Все контакты</span> <span class="pull-right"><a href="/{{globals.league.slug}}/contacts"><i class="fa fa-arrow-circle-o-right"></i></a></span></div>{{/if}} {{else}}<div class="panel s_mb_20"><div class="panel__header"><i class="fa fa-trophy text_size_16 s_mr_10"></i> Турниры</div><div class="panel__body">{{#each globals.league.countries}}<h5 class="text_color_orange s_mt_0 s_mb_10">{{name}}</h5><ul>{{#each tournaments}}<li class="s_ml_20 s_mb_5"><a href="/{{../globals.league.slug}}/tournaments/{{slug}}">{{noYear name}}</a></li>{{/each}}</ul>{{/each}}</div></div><!-- NEWS --> {{#notEmptyObject globals.news}}<div class="panel s_m_0"><div class="panel__header"><i class="fa fa-quote-right text_size_16 s_mr_10"></i> Новости</div><div class="panel__body">{{> news news=globals.news}}</div></div><div class="link_type_full s_mb_10"><span class="text_color_orange">Все новости</span> <span class="pull-right"><a href="/{{globals.league.slug}}/news"><i class="fa fa-arrow-circle-o-right"></i></a></span></div>{{/notEmptyObject}}<!-- CONTACTS --> {{#if globals.contacts.length}}<div class="panel s_m_0"><div class="panel__header"><i class="fa fa-phone text_size_16 s_mr_10"></i> Контакты</div><div class="panel__body">{{> contacts contacts=globals.contacts}}</div></div><div class="link_type_full s_mb_10"><span class="text_color_orange">Все контакты</span> <span class="pull-right"><a href="/{{globals.league.slug}}/contacts"><i class="fa fa-arrow-circle-o-right"></i></a></span></div>{{/if}} {{/if}}<!-- PARTNERS --><div class="panel s_m_0"><div class="panel__header"><i class="fa fa-suitcase text_size_16 s_mr_10"></i> Партнеры</div><div class="panel__body">{{> partners}}</div></div></div></div>