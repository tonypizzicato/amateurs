<table class="table table_type_table s_m_0">
    <thead>
    <tr>
        <th class="{{#if tableFull}}col-md-05{{else}}col-md-2{{/if}} text_align_c" colspan="2">Место</th>
        <th class="{{#if tableFull}}col-md-3{{else}}col-md-8{{/if}}">Клуб</th>
        {{#each league.table}}
            <th class="col-md-05 text_align_c">{{position}}</th>
        {{/each}}
        <th class="col-md-1 text_align_c">И</th>
        <th class="col-md-1 text_align_c">О</th>
    </tr>
    </thead>

    <tbody>
    {{#each league.table}}
        <tr class="table__position" data-pos="{{position}}">
            <td class="text_align_c">{{position}}</td>
            <td class="text_align_c movement">
                <span class="
                    {{~#gt previous position}} fa fa-angle-up{{/gt~}}
                    {{~#lt previous position}} fa fa-angle-down{{/lt~}}
                    {{~#eq previous position}} fa fa-circle{{/eq~}}
                    ">
                </span>
            </td>
            <td>{{team}}</td>
            {{#each ../league.table}}
                <td class="text_align_c chess__score{{#eq position ../position}} chess__score_same{{/eq}}">
                    {{#ne position ../position}}{{position}}{{/ne}}
                </td>
            {{/each}}
            <td class="text_align_c">{{games}}</td>
            <td class="text_align_c">{{points}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>
