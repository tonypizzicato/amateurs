<div class="row clearfix s_mb_20"><div class="col-md-8 column"><div class="panel s_m_0"><div class="panel__header"><i class="fa fa-list-ol s_mr_10"></i> {{tournament.name}}</div><div class="panel__body s_p_0 s_pb_5">{{> stats stats=stats emptyText='Нет данных'}}</div></div></div><!-- SIDEBAR --><div class="col-md-4 column sidebar">{{#if globals.table}}<div class="panel s_m_0"><div class="panel__header"><i class="fa fa-list-ol s_mr_10"></i> Таблица</div><div class="panel__body">{{> table table=globals.table league=globals.league tournament=tournament tableFull=false}}</div></div><div class="link_type_full s_mb_10"><span class="text_color_orange">Полная таблица</span> <span class="pull-right"><a href="/{{globals.league.slug}}/tournaments/{{tournament.slug}}/table"><i class="fa fa-arrow-circle-o-right"></i></a></span></div>{{/if}}<div class="panel panel_type_fixture s_m_0"><div class="panel__header"><i class="fa fa-calendar s_mr_10"></i> Последние матчи</div><div class="panel__body">{{> 'fixture' fixture=globals.recent emptyText='Ещё нет сыгранных матчей' }}</div></div><div class="link_type_full s_mb_10"><span class="text_color_orange">Календарь</span> <span class="pull-right"><a href="/{{globals.league.slug}}/tournaments/{{tournament.slug}}/fixture"><i class="fa fa-arrow-circle-o-right"></i></a></span></div><div class="panel panel_type_fixture s_m_0"><div class="panel__header"><i class="fa fa-calendar s_mr_10"></i> Ближайшие матчи</div><div class="panel__body">{{> 'fixture' fixture=globals.comming emptyText='Нет запланированных матчей' }}</div></div><div class="link_type_full s_mb_10"><span class="text_color_orange">Календарь</span> <span class="pull-right"><a href="/{{globals.league.slug}}/tournaments/{{tournament.slug}}/fixture"><i class="fa fa-arrow-circle-o-right"></i></a></span></div><!-- NEWS --> {{#notEmptyObject globals.news}}<div class="panel s_m_0"><div class="panel__header"><i class="fa fa-quote-right text_size_16 s_mr_10"></i> Новости</div><div class="panel__body">{{> news news=globals.news}}</div></div><div class="link_type_full s_mb_10"><span class="text_color_orange">Все новости</span> <span class="pull-right"><a href="/{{globals.league.slug}}/tournaments/{{tournament.slug}}/news"><i class="fa fa-arrow-circle-o-right"></i></a></span></div>{{/notEmptyObject}}<!-- CONTACTS --> {{#if globals.tournament.contacts.length}}<div class="panel s_m_0"><div class="panel__header"><i class="fa fa-phone text_size_16 s_mr_10"></i> Контакты</div><div class="panel__body">{{> contacts contacts=globals.tournament.contacts}}</div></div><div class="link_type_full s_mb_10"><span class="text_color_orange">Все контакты</span> <span class="pull-right"><a href="/{{globals.league.slug}}/contacts"><i class="fa fa-arrow-circle-o-right"></i></a></span></div>{{/if}}</div></div>